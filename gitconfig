[user]
        name = Rob McGrail
        email = rob.mcgrail@gmail.com
[core]
        editor = vim
        whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[push]
        default = matching
[color]
        ui = true
[color "branch"]
        current = yellow bold
        local = green bold
        remote = cyan bold
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse
[color "status"]
        added = green bold
        changed = yellow bold
        untracked = red bold
[alias]
        logpretty = log --graph --decorate --pretty=oneline --abbrev-commit
        l = log --oneline

        s = status
        sb = status -s -b

        a = add .

        b = branch
        t = tag
        r = remote

        d = diff
        dc = diff --cached
        dk = diff --check
        dck = diff --cached --check

